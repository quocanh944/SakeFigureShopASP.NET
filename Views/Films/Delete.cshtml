@model SakeFigureShop.Domains.Film

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Bạn có muốn xóa Anime hoặc Film này chứ?</h1>

<div>
    <a class="my-4" asp-action="Index">Quay lại danh sách Anime hoặc Film</a>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
    </form>
</div>